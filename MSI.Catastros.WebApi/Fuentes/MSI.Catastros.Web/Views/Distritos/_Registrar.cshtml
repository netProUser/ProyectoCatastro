                                        new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Provincia)
                            </div>
                        </div>*@
                        @Html.TextBoxFor(model => model.Estado, new { type = "hidden", @class = "form-control" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.CodigoDistrito, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.CodigoDistrito, new { @class = "form-control", @readonly = "readonly" })
                                @Html.ValidationMessageFor(model => model.CodigoDistrito)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.NombreDistrio, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.NombreDistrio, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.NombreDistrio)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Abreviatura, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.Abreviatura, new { @class = "form-control" })
