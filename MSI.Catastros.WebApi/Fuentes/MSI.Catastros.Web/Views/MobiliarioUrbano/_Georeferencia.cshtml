@model MSI.Catastros.Web.Funcionalidad.MobiliarioUrbano.MobiliarioUrbanoViewModel

<fieldset class="formulario" style="display: block;">
    <legend>Georeferencia</legend>
    <div class="row">
        <div class="col-md-4">
            @Html.LabelFor(model => model.latitud)
            @Html.TextBoxFor(model => model.latitud, new { @class = "form-control", @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.latitud)

        </div>
        <div class="col-md-4">
            @Html.LabelFor(model => model.longitud)
            @Html.TextBoxFor(model => model.longitud, new { @class = "form-control", @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.longitud)
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <label style="width:100%">&nbsp;</label>
                <a class="btn btn-default" data-toggle="modal" data-target="#ModalMaps">
                    <i class="fa fa-map-marker" aria-hidden="true"></i>
                </a>
            </div>
        </div>
    </div>
</fieldset>
<!-- Modal -->
<div id="ModalMaps" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                @*<button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>*@
                <h5 class="modal-title" id="exampleModalLabel">Geolocalización</h5>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div id="contenedor_mapa">
                        </div>
                        <span id="texto"></span>
                        <span id="capa_mensajes"></span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-success btn-secondary" data-dismiss="modal">Confirmar Posición</button>
            </div>
        </div>
    </div>
</div>