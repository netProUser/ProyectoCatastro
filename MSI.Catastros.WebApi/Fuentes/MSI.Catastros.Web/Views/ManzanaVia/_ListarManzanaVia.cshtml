@model MSI.Catastros.Web.Funcionalidad.ManzanaVia.FiltrarManzanaViaViewModel

@if (Model.listManzanaVia != null || Model.listManzanaVia.Count() > 0)
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Acciones</th>
                    <th>Cod. Sector</th>
                    <th>Cod. Manzana</th>
                    <th>Cod. Vía</th>
                    <th width="40%">Vía</th>
                    <th>Cuadra</th>
                    <th>Lado</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.listManzanaVia)
                {
                    <tr>
                        <td align="center">
                            @Ajax.ActionLink(" ", "Editar", "ManzanaVia"
                 , new { CODCORRMANZVIA = item.CODCORRMANZVIA, CodigoSector = item.CodigoSector, CodigoManzana = item.CodigoManzana, Codigovia = item.CodigoVia }
                                , new AjaxOptions
                                        {
                                            HttpMethod = "Get",
                                            InsertionMode = InsertionMode.Replace,
                                            UpdateTargetId = "modalManzanaVia"
                                        }
                                ,
                                new
                                {
                                    @class = "btn btn-default glyphicon glyphicon-edit",
                                    @type = "button",
                                    data_toggle = "modal",
                                    data_target = "#modalManzanaVia"

                                }
                           )
                            @Ajax.ActionLink(" ", "Eliminar", "ManzanaVia"
                             , new { CODCORRMANZVIA = item.CODCORRMANZVIA, CodigoSector = item.CodigoSector, CodigoManzana = item.CodigoManzana, Codigovia = item.CodigoVia }
                                , new AjaxOptions
                                        {
                                            HttpMethod = "Get",
                                            UpdateTargetId = "modalEliminarManzanaVia"
                                        }
                             ,
                             new
                             {
                                 @class = "btn btn-danger glyphicon glyphicon-remove",
                                 @type = "button",
                                 data_toggle = "modal",
                                 data_target = "#modalEliminarManzanaVia"

                             }
                           )
                        </td>
                        <td align="center">@Html.DisplayFor(modelItem => item.CodigoSector)</td>
                        <td align="center">@Html.DisplayFor(modelItem => item.CodigoManzana)</td>
                        <td align="center">@Html.DisplayFor(modelItem => item.CodigoVia)</td>
                        <td>@Html.DisplayFor(modelItem => item.NombreVia)</td>
                        <td align="center">@Html.DisplayFor(modelItem => item.Numcuadra)</td>
                        <td align="center">@Html.DisplayFor(modelItem => item.Posicionlado)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}