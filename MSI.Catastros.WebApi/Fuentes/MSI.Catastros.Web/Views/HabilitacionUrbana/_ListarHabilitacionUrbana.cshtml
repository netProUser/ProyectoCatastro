@model MSI.Catastros.Web.Funcionalidad.HabilitacionUrbana.FiltrarHabilitacionUrbanaViewModel

@if (Model.listHabilitacionUrbana != null || Model.listHabilitacionUrbana.Count() > 0)
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Acciones</th>
                    <th>Código</th>
                    <th>Nombre Habilitación Urbana</th>
                    <th>Tipo de Habilitación Urbana</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.listHabilitacionUrbana)
                {
                    <tr>
                        <td align="center">
                            @Ajax.ActionLink(" ", "Editar", "HabilitacionUrbana"
                                , new { id = item.CodigoHabilitacionUrbana }
                                , new AjaxOptions
                                        {
                                            HttpMethod = "Get",
                                            InsertionMode = InsertionMode.Replace,
                                            UpdateTargetId = "modalHabilitacionUrbana"
                                        }
                                ,
                                new
                                {
                                    @class = "btn btn-default glyphicon glyphicon-edit",
                                    @type = "button",
                                    data_toggle = "modal",
                                    data_target = "#modalHabilitacionUrbana"

                                }
                           )
                           @Ajax.ActionLink(" ", "Eliminar", "HabilitacionUrbana"
                                , new { id = item.CodigoHabilitacionUrbana }
                                , new AjaxOptions
                                        {
                                            HttpMethod = "Get",
                                            UpdateTargetId = "modalEliminarHabilitacionUrbana"
                                        }
                                ,
                                new
                                {
                                    @class = "btn btn-danger glyphicon glyphicon-remove",
                                    @type = "button",
                                    data_toggle = "modal",
                                    data_target = "#modalEliminarHabilitacionUrbana"

                                }
                           )
                        </td>
                        <td align="center">@Html.DisplayFor(modelItem => item.CodigoHabilitacionUrbana)</td>
                        <td>@item.NombreHabilitacionUrbana</td>
                        <td>@item.NombreTipoHabilitacion</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
